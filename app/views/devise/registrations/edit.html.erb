<div id="registration-container">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="name-inputs">
      <div class="field">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, placeholder: "John" %>
      </div>

      <div class="field">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, placeholder: "Doe" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password do %>
        Password
        <%= content_tag :span, "(leave blank if you don't want to change it)", class: 'highlight-prim' %>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "••••••••" %>
      <% if @minimum_password_length %>
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "••••••••" %>
    </div>

    <div class="field">
      <%= f.label :current_password do %>
        Current password
        <%= content_tag :span, '(we need your current password to confirm your changes)', class: 'highlight-prim' %>
      <% end %>
      <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "••••••••" %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: "button-prim" %>
    </div>
  <% end %>

  <h3>Cancel my account</h3>

  <div class="cancel-button-div">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "button-prim-outline", style: "width: 200px;" %></div>

  <%= link_to "Back", :back %>
</div>
