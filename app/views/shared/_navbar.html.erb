<div id="navbar">
  <%= link_to root_path do %>
    <%= image_tag 'logo_white.png', class: 'logo-image' %>
  <% end %>
  <div class="menu">
    <%= link_to 'Home', root_path, class: "nav-link" %>
    <%= link_to 'How it works', root_path(anchor: 'how-it-works'), class: "nav-link" %>

    <% if user_signed_in? %>
      <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete }, class: "button-prim-outline" %>
    <% else %>
      <%= link_to "Sign up", new_user_registration_path, class: "button-prim-outline" %>
    <% end %>

    <% if policy(Bet).index? %>
      <%= link_to "Picks", admin_bets_path, class: "button-prim" %>
    <% else %>
      <%= link_to 'Sign in', new_user_session_path, class: "button-prim" %>
    <% end %>
  </div>
</div>
